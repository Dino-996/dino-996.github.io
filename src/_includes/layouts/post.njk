---
layout: layouts/base.njk
---

<article class="mx-auto" style="max-width: 800px;">
  <header class="mb-4">
    <h1 class="fw-bold">{{ title }}</h1>

    <time
      class="text-muted"
      datetime="{{ page.date | dateIso }}"
    >
      {{ page.date | dateHuman }}
    </time>
  </header>

  <hr />

  <section class="content">
    {{ content | safe }}
  </section>
  
</article>