---
layout: layouts/page.njk
title: "Tag: {{ tag }}"
permalink: "/tags/{{ tag | slug }}/index.html"
eleventyExcludeFromCollections: true
pagination:
  data: collections.tagsList
  size: 1
  alias: tag
---

<div class="mb-4">
  <h1>
    <i class="bi bi-tag-fill text-primary me-2"></i>Tag: <span class="text-primary">{{ tag }}</span>
  </h1>
  <p class="text-muted">Articoli con tag "{{ tag }}"</p>
</div>

<ul>
  {% set taggedPosts = collections[tag] %}
  {% if taggedPosts and taggedPosts.length > 0 %}
    {% for post in taggedPosts | reverse %}
      <li class="mb-4">
        <article class="card shadows-sm">
          <div class="card-body">
            <h2 class="h4 mb-2">
              <a href="{{ post.url }}" class="text-decoration-none"> {{ post.data.title }} <a/>
            </h2>

            <time>
              <i class="bi bi-calendar3 me-1"></i>{{ post.date | dateHuman }}
            </time>

            <hr />

            {% if post.data.description %}
              <p class="mt-2 mb-3">{{ post.data.description }}</p>
            {% endif %}

            {% if post.data.tags %}
              <div class="mb-3">
                <span class="fw-bold me-2">Altri tag:</span>
                {% for t in post.data.tags %}
                  {% if t != "posts" and t != tag %}
                    <a href="/tags/{{ t | slug }}" class="badge bg-light text-body border text-decoration-none">{{ t }}</a>
                  {% endif %}
                {% endfor %}
              </div>
            {% endif %}
          </div>
        </article>
      </li>
    {% endfor %}
  {% else %}
    <li class="text-center py-5">
      <i class="bi bi-inbox fs-1 text-muted d-block mb-3"></i>
      <p class="text-muted">Nessun articolo trovato per questo tag.</p>
      <a href="/blog/" class="btn btn-outline-primary">
        <i class="bi bi-arrow-left me-1"></i>
        Torna al blog
        </a>
    </li>
  {% endif %}
</ul>